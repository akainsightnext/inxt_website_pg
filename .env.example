# Environment Variables for AI Assessment
# Copy to .env.local for local development
# Set in Vercel Dashboard for production

# Main Website URL (where email CTAs should redirect)
MAIN_WEBSITE_URL=https://insightnext.tech

# Database (Optional - can deploy without this)
DATABASE_URL=postgresql://username:password@host:port/database

# Email Service (Required for sending results)
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=hello@insightnext.tech

# Application
NODE_ENV=production
APP_URL=https://your-assessment-domain.vercel.app